{
  "name": "mycal",
  "version": "2.0.0",
  "description": "Myanmar Calendar - Zero dependency TypeScript rewrite with Bun",
  "main": "./dist/node/index.js",
  "module": "./dist/node/index.js",
  "browser": "./dist/browser/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "node": "./dist/node/index.js",
      "browser": "./dist/browser/index.js",
      "types": "./dist/types/index.d.ts",
      "default": "./dist/node/index.js"
    }
  },
  "scripts": {
    "build": "bun run build:node && bun run build:browser && bun run build:types",
    "build:node": "bun build ./src/index.ts --outdir ./dist/node",
    "build:browser": "bun build ./src/index.ts --outdir ./dist/browser --target browser",
    "build:types": "tsc --declaration --emitDeclarationOnly --outDir ./dist/types",
    "test": "bun test",
    "dev": "bun --watch src/index.ts",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "bun run build",
    "format": "prettier --write \"**/*.{ts,js,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md,yml,yaml}\"",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AungMyoKyaw/mycal.git"
  },
  "keywords": [
    "myanmar",
    "burma",
    "burmese",
    "calendar",
    "myanmar-calendar",
    "burmese-calendar",
    "thingyan",
    "myanmar-new-year",
    "watat",
    "intercalary",
    "myanmar-dates",
    "burmese-dates",
    "date",
    "datetime",
    "date-converter",
    "calendar-converter",
    "typescript",
    "bun",
    "zero-dependency",
    "lightweight"
  ],
  "author": "Aung Myo Kyaw",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AungMyoKyaw/mycal/issues"
  },
  "homepage": "https://github.com/AungMyoKyaw/mycal#readme",
  "devDependencies": {
    "@types/bun": "latest",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "type": "module",
  "lint-staged": {
    "*.{ts,js,json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
